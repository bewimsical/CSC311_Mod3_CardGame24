                  <Label text="Hint" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#evaluateExpression" pickOnBounds="true" preserveRatio="true" styleClass="menu-label" />
                  <Label text="Verify" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="410.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="menu-label" />
                  <Label text="Clear" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="210.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="menu-label" />
                  <Label text="Deal" />
               </children>
            </VBox>
         </children>
